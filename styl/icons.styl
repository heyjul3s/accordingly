@import "icon-variables"

@font-face
    font-family 'ju'
    src url(../assets/fonts + '/ju.eot?d6kqu0')
    src url(../assets/fonts + '/ju.eot?d6kqu0#iefix') format('embedded-opentype'), url(../assets/fonts + '/ju.ttf?d6kqu0') format('truetype'), url(../assets/fonts + '/ju.woff?d6kqu0') format('woff'), url(../assets/fonts + '/ju.svg?d6kqu0#ju') format('svg')
    font-weight normal
    font-style normal

[class^="icon-"], [class*=" icon-"]
    font-family 'ju' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1

    /* Better Font Rendering =========== */
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-arrow-left
    &:before
        content icon-arrow-left
.icon-arrow-right
    &:before
        content icon-arrow-right
.icon-ju
    &:before
        content icon-ju
.icon-jules
    &:before
        content icon-jules
.icon-envelope-o
    &:before
        content icon-envelope-o
.icon-twitter
    &:before
        content icon-twitter
.icon-envelope
    &:before
        content icon-envelope
.icon-github-alt
    &:before
        content icon-github-alt
.icon-codepen
    &:before
        content icon-codepen
