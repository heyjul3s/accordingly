html,
body
    min-height 100%


body
    padding-top 90px
    overflow-x hidden
    overflow-y scroll
    font-family base-font
    color white
    background-color #35b967

    +above(1200px)
        padding-top 130px


*
    box-sizing border-box;


ul,
ol
    list-style none

    li
        display inline-block


img
    max-width 100%;
    margin 0;
    vertical-align middle;


a
    text-decoration none

    &:focus,
    &:active
        outline none
        border none
        appearance none
        text-shadow none

p
    line-height 1.5

.container
    position relative
    center(1320px)

.intro
    text-align center
    margin-bottom 50px

.site-footer
    padding 40px 0
    text-align center

    .slash
        display inline-block
        margin 0 10px
        vertical-align middle

    a
        position relative
        color white

        span
            display inline-block
            vertical-align middle
            margin 0 5px

        .icon-arrow-left,
        .icon-arrow-right
            font-size 12pxa
